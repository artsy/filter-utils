{
  "name": "@artsy/filter-utils",
  "version": "1.0.0",
  "description": "Utilities for parsing and formatting Artsy's filter values",
  "main": "index.js",
  "scripts": {
    "clean": "rm -rf dist",
    "build": "yarn clean && tsc -p .",
    "prepublishOnly": "yarn build",
    "test": "jest",
    "lint": "tslint -c tslint.json --project tsconfig.json",
    "type-check": "tsc --noEmit --pretty",
    "release": "auto shipit"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/artsy/filter-utils.git"
  },
  "keywords": [
    "Artsy"
  ],
  "author": "mdole & nickskalkin",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/artsy/filter-utils/issues"
  },
  "homepage": "https://github.com/artsy/filter-utils#readme",
  "devDependencies": {
    "@types/jest": "^27.4.0",
    "jest": "^27.5.1",
    "prettier": "^2.5.1",
    "ts-jest": "^27.1.3",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.5.5",
    "auto": "^10.32.6",
    "lint-staged": "^12.3.4"
  },
  "prettier": {
    "semi": false,
    "singleQuote": false,
    "trailingComma": "es5",
    "bracketSpacing": true
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public"
  },
  "lint-staged": {
    "*.@(ts|tsx)": [
      "yarn lint --fix",
      "yarn prettier --write"
    ]
  }
}
